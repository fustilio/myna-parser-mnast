	{
		"version": "2.0.0",
		
		// The command is tsc.
		"command": "tsc",
		
		// Under windows use tsc.exe. This ensures we don't need a shell.
		"windows": {
			"command": "tsc",
			"args": [
				"-w"
			]
		},
		
		// args is the program to compile.
		"args": [],
		
		// use the standard tsc problem matcher to find compile problems
		// in the output.
		"problemMatcher": "$tsc",
		"tasks": [
			{
				"label": "tsc",
				"type": "shell",
				"args": [],
				"problemMatcher": "$tsc",
				"group": {
					"_id": "build",
					"isDefault": false
				}
			}
		]
	}